@app.callback(
    [Output("defect-picker", "options"),
     Output("defect-picker", "style")],
    Input("loss-type", "value")
)
def update_defect_dropdown(loss_type):
    if loss_type == 'melting':
        # 顯示 Melting Defects
        options = [{'label': defect, 'value': defect} for defect in df_cleaned["Defect ID"].unique()]
        style = {'display': 'block'}  # 顯示 Dropdown
    elif loss_type == 'finishing':
        # 顯示 Finishing Defects
        options = [{'label': defect, 'value': defect} for defect in df_finishing_loss_cleaned["Defect ID"].unique()]
        style = {'display': 'block'}  # 顯示 Dropdown
    else:
        # 隱藏 Dropdown
        options = []
        style = {'display': 'none'}
    return options, style
