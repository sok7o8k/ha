import plotly.graph_objects as go

# 假設有一些數據
x_values = ['A', 'B', 'C']

y_values_scatter1 = [8, 12, 5]
y_values_scatter2 = [2, 5, 9]

fig = go.Figure()

# 添加第一個 Scatter 圖（使用輔助 Y 軸）
fig.add_trace(go.Scatter(
    x=x_values,
    y=y_values_scatter1,
    mode='lines+markers',
    name='Scatter Series 1',
    line=dict(color='red'),
    yaxis='y2'  # 使用輔助 Y 軸
))

# 添加第二個 Scatter 圖（使用輔助 Y 軸）
fig.add_trace(go.Scatter(
    x=x_values,
    y=y_values_scatter2,
    mode='lines+markers',
    name='Scatter Series 2',
    line=dict(color='blue'),
    yaxis='y3'  # 使用輔助 Y 軸
))

# 更新布局
fig.update_layout(
    title='Stacked Bar Chart with Multiple Scatter Plots',
    xaxis_title='Categories',
    yaxis_title='Values',
    yaxis=dict(title='Primary Y Axis'),
    yaxis2=dict(
        title='Secondary Y Axis',
        overlaying='y',
        side='right',
        showgrid=False  # 隱藏輔助 Y 軸的網格線
    ),
    yaxis3=dict(
        title='Tertiary Y Axis',  # 修改標題以區分
        overlaying='y',
        side='right',
        position=0.95,  # 微調位置
        showgrid=False  # 隱藏輔助 Y 軸的網格線
    )
)

fig.show()
