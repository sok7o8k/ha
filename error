@app.callback(
    Output('tank-picker', 'options'),
    Input('tank-picker', 'value')
)
def update_tank_options(selected_tank):
    # 提取數字部分並排序
    sorted_tanks = sorted(df_cleaned["Tank ID"].unique(), key=lambda x: int(x[2:]))
    
    # 將排序後的結果傳遞給 Dropdown
    return [{'label': i, 'value': i} for i in sorted_tanks]
